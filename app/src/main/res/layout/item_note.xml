<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ln_main_bg"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="2dp"
    android:background="@drawable/bg_content_focus"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/ln_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_green_pick"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_content_note"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:elegantTextHeight="true"
            android:fontFamily="sans-serif"
            android:gravity="start"
            android:text="@string/txt_nhap"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:elegantTextHeight="true"
            android:fontFamily="@font/inter_font"
            android:gravity="end"
            android:padding="5dp"
            android:text="Th5 27 2024, 15:15"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>